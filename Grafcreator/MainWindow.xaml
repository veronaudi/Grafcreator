<Window x:Class="Grafcreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grafcreator"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" Background="#fee8eb">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Column="0"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Center"
                    Margin="0"
                    Width="60"
                    >
            <Button Name="LineTool" Content="／" FontSize="17"
                    Margin="5" Height="40" Background="#fee8eb" BorderBrush="#81566a" BorderThickness="1.5"/>
            <Button Name="RectTool" Content="▭" FontSize="18 "
                    Margin="5" Height="40" Background="#fee8eb" BorderBrush="#81566a" BorderThickness="1.5"/>
            <Button Name="CircleTool" Content="◯" FontSize="18"
                    Margin="5" Height="40" Background="#fee8eb" BorderBrush="#81566a" BorderThickness="1.5"/>
            <Button Name="TriangleTool" Content="△" FontSize="18"
                    Margin="5" Height="40" Background="#fee8eb" BorderBrush="#81566a" BorderThickness="1.5"/>
            <Button Name="Chose" Content="✥" FontSize="18"
                    Margin="5" Height="40" Background="#fee8eb" BorderBrush="#81566a" BorderThickness="1.5"/>
            <Button Name="Delete" Content="X" FontSize="18" Click="Delete_Click"
                    Margin="5" Height="40" Background="#fee8eb" BorderBrush="#81566a" BorderThickness="1.5"/>
        </StackPanel>

        <!-- Цветовая палитра -->
        <StackPanel Grid.Column="1"
            Orientation="Horizontal"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="10,0,10,10">
            <Button Width="25" Height="25" Background="Black" Click="Color_Click"/>
            <Button Width="25" Height="25" Background="White" Click="Color_Click"/>
            <Button Width="25" Height="25" Background="Red" Click="Color_Click"/>
            <Button Width="25" Height="25" Background="Green" Click="Color_Click"/>
            <Button Width="25" Height="25" Background="Blue" Click="Color_Click"/>
            <Button Width="25" Height="25" Background="Yellow" Click="Color_Click"/>
            <Button Width="25" Height="25" Background="Purple" Click="Color_Click"/>
            <Button Width="25" Height="25" Background="Orange" Click="Color_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="0"
                    Grid.ColumnSpan="2" Margin="5,461,10,0"/>

        <!-- Drawing area -->
        <Canvas Name="DrawCanvas"
                Grid.Column="1"
                Background="White"
                Margin="10,10,10,118"
                ClipToBounds="True"/>

    </Grid>
</Window>
